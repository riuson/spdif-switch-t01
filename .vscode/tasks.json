    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "--preset=Debug",
                "--target=firmware"
            ]
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "--preset=Release",
                "--target=firmware"
            ]
        },
        {
            "label": "Fresh Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--fresh",
                "--preset=Debug"
            ]
        },
        {
            "label": "Fresh Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--fresh",
                "--preset=Release"
            ]
        }
    ]
}